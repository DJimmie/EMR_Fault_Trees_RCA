// What goes here
digraph learn_1 {
	graph [landscape=False rankdir=TB size="20,16" splines=polyline]
	node [color=blue fillcolor=None shape=ellipse style=filled]
	edge [arrowsize=1 fontcolor=red fontsize=8 headport=c labelangle=45 labeldistance=2.0 labelfontsize=6]
	"create proj folder" -> "open cmd window" [label=cmd]
	"open cmd window" -> "{python version path}\python -m venv {name}" [label="name is enviroment"]
	"{python version path}\python -m venv {name}" -> "./{name}/Scripts/activate" [label="activate environment"]
	"./{name}/Scripts/activate" -> "pip search {API_name}" [label=optional]
	"./{name}/Scripts/activate" -> "pip show {API_name}" [label=optional]
	"./{name}/Scripts/activate" -> "pip list" [label="check packages"]
	"./{name}/Scripts/activate" -> "pip freeze" [label=optional]
	"./{name}/Scripts/activate" -> "where python" [label="view python version"]
	"./{name}/Scripts/activate" -> "launch IDE " [label="do some work"]
	"pip list" -> "make requirements.txt" [label="modules I need"]
	"make requirements.txt" -> "pip install -r requirements.txt" [label="install packages"]
	"pip install -r requirements.txt" -> "launch IDE " [label=IDE]
	"write your code" -> deactivate [label="to deactivate environment"]
	deactivate -> "rmdir /s {venv}" [label="if done with venv"]
	deactivate -> "./{name}/Scripts/activate" [label="go back to work"]
	"launch IDE " -> "python -m idlelib.idle" [label="option Idle"]
	"launch IDE " -> "jupyter notebook" [label="option JNB"]
	"python -m idlelib.idle" -> "write your code" [label="do your work"]
	"jupyter notebook" -> "write your code" [label="do your work"]
	"create proj folder" [shape=box]
}
